@model SpinnySideUp.Models.FlightDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Delete Flight #  @Model.Date</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Flight</h4>
    <hr />
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.Date</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Duty</h6>
            <p class="card-text">@Model.Seat</p>
            <p class="card-text">@Model.Mission</p>
        </div>
    </div>

    @using (Html.BeginForm("Delete", "Flight", new { id = Model.FlightId }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Cancel", "List")
        </div>
    }
</div>