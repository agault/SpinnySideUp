@model SpinnySideUp.Models.PilotDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Delete Pilot : @Model.LastName, @Model.FirstName</h2>

<h3>Are you sure you want to delete this Pilot?</h3>
<div>
    
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.LastName, @Model.FirstName</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.DateBirth</h6>
            <p class="card-text">@Model.Rank</p>
            
        </div>
    </div>

    @using (Html.BeginForm("Delete", "Pilot", new { id = Model.PilotId }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Cancel", "List")
        </div>
    }