
@model IEnumerable<SpinnySideUp.Models.PilotDto>

@{
    ViewBag.Title = "List Pilots";
}
<h1>Pilots</h1>
<div class="card text-left">
    <div class="card-header">
        <ul class="nav nav-pills card-header-pills">
            <li class="nav-item">
                @Html.ActionLink("Add Pilot", "Create")
            </li>
        </ul>
    </div>
</div>

<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Rank</th>
            <th scope="col">Last Name</th>
            <th scope="col">First Name</th>
            
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var Pilotitem in Model)
        {

            <tr>
                <th scope="col">@Pilotitem.Rank</th>
                <th scope="col">@Pilotitem.LastName</th>
                <th scope="col">@Pilotitem.FirstName</th>

                <th scope="col">
                    <div class="card-header">
                        <ul class="nav nav-pills card-header-pills">
                            <li class="nav-item">
                                @Html.ActionLink("Details", "Details", new { id = Pilotitem.PilotId })
                            </li>
                            
            <li class="nav-item">
                @Html.ActionLink("Edit", "Edit", new { id = Pilotitem.PilotId })
            </li>
        </ul>
</div>
                </th>

            </tr>


        }
    </tbody>
</table>
